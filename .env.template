# =========================
# Required
# =========================
TYPHOON_API_KEY=your_typhoon_api_key_here

# =========================
# Recommended
# =========================
TYPHOON_MODEL=typhoon-v2.5-30b-a3b-instruct
LOG_LEVEL=INFO

# Background job output
JOB_OUTPUT_DIR=output
JOB_RETENTION_SECONDS=86400

# =========================
# Typhoon request tuning
# =========================
TYPHOON_MAX_RETRIES=3
TYPHOON_BACKOFF_SEC=1.0
TYPHOON_CONTEXT_WINDOW=64000
TYPHOON_MAX_REQUEST_TOKENS=64000
TYPHOON_DEFAULT_COMPLETION_TOKENS=3072
TYPHOON_MIN_COMPLETION_TOKENS=800
TYPHOON_SAFETY_MARGIN_TOKENS=800
TYPHOON_CHARS_PER_TOKEN=2.0

# =========================
# Pipeline parallelism
# =========================
EXTRACT_MAX_PARALLEL=3
GEN_MAX_PARALLEL=3
VAL_MAX_PARALLEL=2
COMPLIANCE_MAX_PARALLEL=2
REACT_MAX_PARALLEL=2
REACT_MAX_LOOPS=2
REACT_OFFICIAL_EDITOR_ENABLED=1
